dark: green

-- ftd.image-src bg-image-src:
light: https://picsum.photos/id/236/200/300
dark: https://picsum.photos/id/237/200/300

-- ftd.background-image bg-image:
src: $bg-image-src
repeat: no-repeat
size: cover

-- ftd.column:
width: fill-container
align-content: center
