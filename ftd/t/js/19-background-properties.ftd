-- ftd.column:
background.solid: $bg-solid
width.fixed.px: 400
height.fixed.px: 200
align-self: center

-- end: ftd.column

-- ftd.column:
background.image: $bg-image
width.fixed.px: 400
height.fixed.px: 200
align-self: center

-- end: ftd.column

-- end: ftd.column
