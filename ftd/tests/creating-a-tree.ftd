-- component toc-heading:
component: ftd.text
$text: caption
text: ref $text
size: 16


-- component table-of-content:
component: ftd.column
$id: string
id: ref $id
width: 300
height: fill


-- component parent:
component: ftd.column
$id: string
$name: caption
$active: optional boolean
id: ref $id
width: fill
open: true

--- ftd.text:
if: $active is not null
text: ref $name
size: 14
color: white

--- ftd.text:
if: $active is null
text: ref $name
size: 14
color: #4D4D4D


